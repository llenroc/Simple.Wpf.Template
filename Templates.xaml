<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpf="clr-namespace:WpfTemplate">

    <DataTemplate DataType="{x:Type wpf:Child1ViewModel}">

        <Grid>

            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="{Binding Path=Title, Mode=OneTime}" />

        </Grid>

    </DataTemplate>

    <DataTemplate DataType="{x:Type wpf:Child2ViewModel}">

        <Grid>

            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="{Binding Path=Title, Mode=OneTime}" />

        </Grid>

    </DataTemplate>

</ResourceDictionary>
