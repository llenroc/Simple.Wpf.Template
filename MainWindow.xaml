<Window x:Class="WpfTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:wpf="clr-namespace:WpfTemplate"
        Title="MainWindow"
        d:DataContext="{d:DesignInstance wpf:MainViewModel}">
   
    <StackPanel>

        <TextBlock>
            <Run Text="Title: " />
            <Run Text="{Binding Path=Title, Mode=OneTime}" />
        </TextBlock>

        <Border BorderBrush="Red"
                BorderThickness="2"
                Margin="10"
                Height="200"
                Width="100">  

            <ContentPresenter Content="{Binding Path=Child1, Mode=OneTime}" />

        </Border>

        <Border BorderBrush="Blue"
                BorderThickness="2"
                Margin="10"
                Height="200"
                Width="100">

            <ContentPresenter Content="{Binding Path=Child2, Mode=OneTime}" />

        </Border>

    </StackPanel>
</Window>
