<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModels="clr-namespace:WpfTemplate.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:Child1ViewModel}">

        <Grid>

            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="{Binding Path=Title, Mode=OneTime}" />

        </Grid>

    </DataTemplate>

    <DataTemplate DataType="{x:Type viewModels:Child2ViewModel}">

        <Grid>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Text="{Binding Path=Title, Mode=OneTime}" />

            <Button Grid.Column="0"
                    Grid.Row="1"
                    Content="Delay"
                    Height="24"
                    Command="{Binding Path=DelayCommand, Mode=OneWay}" />
            

        </Grid>

    </DataTemplate>

</ResourceDictionary>
